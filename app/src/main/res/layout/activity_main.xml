<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slide_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stpl.cameraapp.Activity.MainActivity">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



        <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    </FrameLayout>
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/frame_layout"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/record_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frame_layout"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_videocam_white_36dp" />

        <ImageButton
            android:id="@+id/capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frame_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
            android:src="@drawable/ic_photo_camera_white_36dp" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        app:behavior_peekHeight="20dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/pictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:text="pictures" />
            <Button
                android:id="@+id/videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/pictures"
                android:layout_toRightOf="@+id/pictures"
                android:text="videos" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_cloud_upload_red_400_24dp" />

                <ImageButton
                    android:id="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/delete"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/delete"
                    android:layout_toRightOf="@+id/delete"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/ic_delete_red_300_24dp" />
            </RelativeLayout>

            <com.example.stpl.cameraapp.CustomViews.ExpandableHeightGridView
                android:id="@+id/image_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttons"
                android:gravity="center"
                android:horizontalSpacing="1dp"
                android:isScrollContainer="false"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp" />
            <com.example.stpl.cameraapp.CustomViews.ExpandableHeightGridView
                android:id="@+id/video_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttons"
                android:gravity="center"
                android:horizontalSpacing="1dp"
                android:isScrollContainer="false"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp"
                android:visibility="gone" />



        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>